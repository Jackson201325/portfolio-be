<h1>Host::Listings#edit</h1>
<p>Find me in app/views/host/listings/edit.html.erb</p>

<%= render partial: "shared/errors" %>

<h1>Edit <%= @listing.title %></h1>
<pre><%= JSON.pretty_generate(@listing.as_json) %></pre>

<form action="/host/listings/<%= @listing.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PUT">

  <label for="listing_title">Title</label>
  <input type="text" name="listing[title]" id="title" value="<%= @listing.title %>">

  <label for="about">About</label>
  <textarea name="listing[about]" id="about"><%= @listing.about %></textarea>

  <label for="about">Guest Number</label>
  <input type="number" name="listing[max_guest]" id="max_guest" value="<%= @listing.max_guest %>" min=1 max="100" step="1">

  <input type="submit" value="Updating listing">
</form>
