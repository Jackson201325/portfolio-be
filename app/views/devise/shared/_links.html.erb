<% if controller_name == 'registrations' %>
  <%= link_to "Already registered ? Log in here", new_session_path(resource_name),class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
<% end %>
